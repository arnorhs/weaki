doctype 5
head
  title= title
  link(rel='stylesheet', href='/.weaki/style.css')
body
  .header
    .width-wrapper
      h1.home
        a(href='/')= title
      .search-box
        form(method='get', action='/weaki-search')
          input(type='text', id='search-query', placeholder='search...', name='q', value=query ? query : '')
          - if (query)
            script(type='text/javascript')
              document.getElementById('search-query').focus();
  .breadcrumbs
    .width-wrapper
      ul
        - for(var i = 0; i < breadcrumbs.length; i++)
          li(class='item' + i)
            a(href=breadcrumbs[i].url)= breadcrumbs[i].title
  div.content
    .width-wrapper
      block content
