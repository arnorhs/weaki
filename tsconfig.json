{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "declaration": true,
    "declarationDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "module": "CommonJS",
    "rootDir": "./"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist"]
}
